@model IEnumerable<DataBase.Page>

@{
    ViewBag.Title = "لیست اخبار";
}

<h2>@ViewBag.Title</h2>
<h4 class="text-center font_Style"><strong>@ViewBag.Title</strong> </h4>
<hr/>
<p class="text-center">
    @Html.ActionLink("افزودن خبر", "Create" ,null,new { @class = "btn btn-success font_Style" ,@title= "افزودن خبر" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupPage.GroupTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShowInSlider)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <img src="~/PageImages/@item.ImageName" alt="@item.ImageName" class="thumbnail" style="max-width: 150px;"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupPage.GroupTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Visit)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ShowInSlider)
        </td>
        <td>
           @item.CreateDate.ToShamsi()
        </td>
        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id = item.PageId } ,new { @class = " font_Style btn btn-warning font_Style" ,@title = "ویرایش" }) 
            @Html.ActionLink("جزئیات", "Details", new { id = item.PageId } , new { @class = " font_Style btn btn-info font_Style" ,@title= "جزئیات" }) 
            @Html.ActionLink("حذف", "Delete", new { id = item.PageId }, new { @class = " font_Style btn btn-danger font_Style" ,@title= "حذف" })
        </td>
    </tr>
}

</table>
<hr/>