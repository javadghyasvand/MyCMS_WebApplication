@using WebGrease
@model DataBase.Page

@{
    ViewBag.Title = "ShowNews";
}
<style>
    img {
        max-width: 100% !important;
    }
</style>
<ul class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">خانه </a>
    </li>
    <li class="breadcrumb-item">
        <a href="/Archive">اخبار </a>
    </li>
    <li class="breadcrumb-item">
        <a href="">@Model.GroupPage.GroupTitle </a>
    </li>
    <li class="breadcrumb-item active">@Model.PageTitle</li>
</ul>
<section class="single-news border-radius">
    <header>
        <h2> @Model.PageTitle</h2> <span> <i class="fa fa-calendar"></i> انتشار : @Model.CreateDate.ToShamsi() </span>
    </header>
    <article>
        <p>
            @Model.ShortDescription
        </p>
        <div>
            <img class="thumbnail" style="max-width: 100%; margin: 10px auto" src="~/PageImages/@Model.ImageName" alt="@Model.PageTitle" />
        </div>
        <p>
            @Html.Raw(Model.Description)
        <p>
    </article>
</section>
<div class="keywords border-radius">
    @foreach (var tag in Model.Tags.Split(','))
    {
        <a href="/Search?q=@tag"> @tag </a>
    }
</div>


<section class="comment-layer">
    <header>
        <i class="fa fa-comments"></i><h5> دیدگاه کاربران </h5><span> @Model.CommentPages.Count دیدگاه </span>
    </header>
    <ul id="commentList">

        @Html.Action("ShowComments")

    </ul>


    <h6> شما هم دیدگاه خود را ارسال کنید </h6>
    <form class="comment-form" action="" method="post">
        <div>
            <input placeholder=" نام و نام خانوادگی" type="text" id="txtName">
            <input placeholder=" ایمیل خود را وارد نمایید " type="email" id="txtEmail">
        </div>
        <textarea placeholder=" متن دیدگاه" id="txtComment"> </textarea>
        <input value="ثبت دیدگاه ارزشمند شما " type="button" onclick="addComment()">
    </form>
</section>


    <script>
    function addComment() {
        $.ajax({
            url: "/News/AddComment/" +@Model.PageId,
            type: "Get",
            data: {
                name: $("#txtName").val(), email: $("#txtEmail").val(), comment: $("#txtComment").val()
            }

        }).done(function (result) {
            $("#commentList").html(result);
            $("#txtName").val("");
            $("#txtEmail").val("");
            $("#txtComment").val("");
        });
    }
    </script>
